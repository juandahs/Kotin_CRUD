<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CRUD" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#15D07B</item>
    </style>

    <style name="Theme.CRUD" parent="Base.Theme.CRUD" />

    <style name="error_toast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/colorDanger</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <!-- Se agrega el borde del toast -->
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconStart">@drawable/error_icon</item>
        <!--
        <item name="stIconStart">@drawable/ic</item>
        <item name="stIconEnd">@drawable/ic</item>
        -->
        <item name="stLength">LONG</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="success_toast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/colorSuccess</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <!-- Se agrega el borde del toast -->
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconStart">@drawable/error_icon</item>
        <!--
        <item name="stIconStart">@drawable/ic</item>
        <item name="stIconEnd">@drawable/ic</item>
        -->
        <item name="stLength">LONG</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>

</resources>